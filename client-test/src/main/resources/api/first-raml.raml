#%RAML 1.0
title: First-Raml
traits:
  client_required:
    headers:
      client_id:
        type: string
        required: true
      client_secret:
        type: string

/productitem:
  get:
    is:
      - client_required
    responses:
      200:
        body:
          application/json:
            example: !include productresponse.json
  post:
    is:
      - client_required
    description: inserting data into database/file/salesforce
    body:
      application/json:
        example: !include postrequest.json
          
