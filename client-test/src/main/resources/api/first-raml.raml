    is:
      - client_required
    description: inserting data into database/file/salesforce
    body:
      application/json:
        example: !include putrequest.json
          
    responses:
      200:
        body:
          application/json:
            example: !include putresp.json
              
  delete:
    is:
      - client_required
    description: inserting data into database/file/salesforce
    body:
      application/json:
        example: !include deletereq.json
          
    responses:
      200:
        body:
          application/json:
            example:
              
                                
